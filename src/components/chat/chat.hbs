<div class="chat">
  <img class="chat__image" src="{{image}}" alt="Аватар чата"/>
  <div class="chat__message-wrapper">
    <p class="chat__name">{{chatName}}</p>
    <p class="chat__message">{{#if isOwn}}<span class="chat__own-message">Вы: </span>{{/if}}{{lastMessage}}</p>
  </div>
  <div class="chat__time-wrapper">
    <p class="chat__time">{{time}}</p>
    {{#if hasUnread}}
      <p class="chat__counter">4</p>
    {{/if}}
  </div>
</div>
